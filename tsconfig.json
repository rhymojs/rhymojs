{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "../lib",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src"],
  "typeAcquisition": {
    "enable": true
  }
}
